<h1>タスク一覧</h1>
  <table>
      <tr>
        <th>タスク名</th>
        <th>内容</th>
        <th>終了期限</th>
        <th>登録日時</th>
        <th>ステータス</th>
        <th>優先順位</th>
      </tr>
      <% @users.tasks.each do|task| %>     
        <tr>
          <td><%= @task.title %></td>
          <td><%= @task.content %></td>
          <td><%= @task.expired_at %></td>
          <td><%= @task.created_at %></td>
          <td><%= @task.status %></td>
          <td><%= @task.priority %></td>
        </tr>      
      <% end %>
  </table>
<%= link_to '戻る', admin_users_path %>  
